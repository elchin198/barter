# Production environment configuration for BarterTap

# Node environment
NODE_ENV=production

# Server port (default port for Hostinger Node.js is 8080)
PORT=8080

# Session secret
SESSION_SECRET=bartertap_production_session_key_secure_change_this

# Database URL - replace with your Hostinger MySQL credentials
# Format: mysql://username:password@hostname:3306/database_name
DATABASE_URL=mysql://u726371272_barter_db:your_db_password_here@localhost:3306/u726371272_barter_db

# WebSocket config
WS_PORT=8080
WS_PATH=/ws

# File upload limits
MAX_FILE_SIZE=5242880
MAX_FILES_PER_UPLOAD=10

# Admin configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@bartertap.az

# API keys for third-party services
# GOOGLE_MAPS_API_KEY=your_api_key_here